<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.boss.sortg.metal"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/sorteerhulp_ic_metalen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="METAL"
        android:id="@+id/textView34"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:textSize="40dp"
        android:textColor="#ff5a8382" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="YES: metal packaging, including pressurized cans for food and cosmetics, aluminium trays, metal lids and caps."
        android:id="@+id/textView35"
        android:layout_below="@+id/imageView12"
        android:layout_alignParentStart="true"
        android:textColor="#ff121212"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NO: aluminium foil, other metal objects."
        android:id="@+id/textView36"
        android:layout_below="@+id/textView35"
        android:layout_alignParentStart="true"
        android:textColor="#ff121212"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ATTENTION: make sure the pakaging is empty and has not been used for toxic products. Maximum volume of 8l."
        android:id="@+id/textView37"
        android:layout_below="@+id/textView36"
        android:layout_alignParentStart="true"
        android:textColor="#ff121212"
        android:paddingTop="15dp" />
</RelativeLayout>
