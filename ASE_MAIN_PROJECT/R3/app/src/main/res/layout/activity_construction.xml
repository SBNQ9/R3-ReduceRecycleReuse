<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.boss.sortg.construction"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView16"
        android:src="@drawable/sorteerhulp_ic_kmo_highlighted"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView51" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONSTRUCTION"
        android:id="@+id/textView51"
        android:layout_alignBottom="@+id/imageView16"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:textColor="#ff143ab9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="YES: Wood, Lumber, Dry wall, steel, shingles, glass, windows, concrete, masonry, asphalt, copper."
        android:id="@+id/textView52"
        android:layout_below="@+id/imageView16"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ATTENTION: Be careful while handling glass and wood. Dont break glass and wood."
        android:id="@+id/textView53"
        android:layout_below="@+id/textView52"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:paddingTop="15dp" />
</RelativeLayout>
