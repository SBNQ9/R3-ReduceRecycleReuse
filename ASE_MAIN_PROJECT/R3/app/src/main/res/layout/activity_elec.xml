<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.boss.sortg.elec"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView7"
        android:src="@drawable/sorteerhulp_ic_lampen_highlighted"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView17"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELECTRONICS"
        android:id="@+id/textView16"
        android:textStyle="bold|italic"
        android:textColor="#ff649aff"
        android:textSize="35dp"
        android:layout_above="@+id/textView17"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If the electronic equipment is in working condition please report it through reuse application. If appliance is not in working condition please seal i in plastic sack and may keep it any nearest recycling center."
        android:id="@+id/textView17"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:textSize="20dp" />

</RelativeLayout>
