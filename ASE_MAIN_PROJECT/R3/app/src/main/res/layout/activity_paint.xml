<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.boss.sortg.paint"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView15"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/sorteerhulp_ic_gemengdeplastics_highlighted" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PAINT"
        android:id="@+id/textView47"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_alignParentStart="true"
        android:textColor="#ff6092aa"
        android:textStyle="bold|italic"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Paints are recyled to new form of paints called as reblended paints which consists of old paints and new mixtures. Oil paints are also recycled and converted into products known as fosters."
        android:id="@+id/textView48"
        android:layout_below="@+id/textView47"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="YES: oil paints, normal paints"
        android:id="@+id/textView49"
        android:layout_below="@+id/textView48"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ATTENTION: Please cover paint with lids otherwise they will become tough to recycle."
        android:id="@+id/textView50"
        android:layout_below="@+id/textView49"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:paddingTop="15dp" />
</RelativeLayout>
